{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "CommonJS",
    "target": "es2020",
    "lib": [
      "es2022"
    ],
    "strict": true,
    "alwaysStrict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "skipLibCheck": false,
    "inlineSourceMap": true,
    "types": [
      "node",
      "bson",
      "mongodb",
      "undici"
    ],
  },
  "include": [
    "lib/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}